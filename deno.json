{
  "name": "@m4rc3l05/media-follower",
  "version": "0.0.0",
  "exports": "./deno.json",
  "tasks": {
    "apps:rss-feed": {
      "description": "Run rss feed app",
      "command": "deno run -A src/entrypoints/apps/rss-feed/main.ts"
    },
    "apps:admin": {
      "description": "Run rss feed app",
      "command": "deno run -A src/entrypoints/apps/admin/main.ts"
    },
    "jobs:sync-inputs": {
      "description": "Run sync release source app",
      "command": "deno run -A src/entrypoints/jobs/sync-inputs/main.ts"
    },
    "jobs:fetch-outputs": {
      "description": "Run sync release app",
      "command": "deno run -A src/entrypoints/jobs/fetch-outputs/main.ts"
    },
    "dev:run-migrations": {
      "description": "Run db migrations",
      "command": "dbmate -u 'sqlite:./data/app.db' -d ./src/common/database/migrations -s ./src/common/database/schema.sql up && deno run -A src/entrypoints/commands/gen-db-types/main.ts"
    },
    "dev:pretty-logs": {
      "description": "Pretty print logs",
      "command": "deno x pino-pretty"
    },
    "test": {
      "description": "Run tests",
      "command": "ENV=test NODE_ENV=test DATABASE_PATH=':memory:' CRYPTO_PBKDF2_ITERATIONS=1 CRYPTO_PBKDF2_HASH_FUNCTION=SHA-256 CRYPTO_PBKDF2_SALT_LENGTH=1 deno test --allow-env --allow-read=. --no-check --trace-leaks --parallel"
    },
    "check:fmt": {
      "description": "Run formatting checks",
      "command": "deno fmt --check ."
    },
    "check:lint": {
      "description": "Run lint checks",
      "command": "deno lint ."
    },
    "check:check": {
      "description": "Run check checks",
      "command": "deno check ."
    },
    "checks": {
      "description": "Run code checks",
      "dependencies": [
        "check:fmt",
        "check:lint",
        "check:check"
      ]
    }
  },
  "lint": {
    "exclude": [
      "src/common/test/data",
      "src/common/database/schema.sql",
      "src/common/database/types.ts"
    ],
    "rules": {
      "include": [
        "verbatim-module-syntax"
      ],
      "tags": [
        "recommended",
        "jsr",
        "jsx"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "src/common/test/data",
      "src/common/database/schema.sql",
      "src/common/database/types.ts"
    ]
  },
  "unstable": [
    "fmt-sql",
    "raw-imports"
  ],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "precompile",
    "jsxImportSource": "preact"
  },
  "minimumDependencyAge": "P7D",
  "imports": {
    "#src/": "./src/",
    "@b-fuze/deno-dom": "jsr:@b-fuze/deno-dom@0.1.56",
    "@std/assert": "jsr:@std/assert@1.0.16",
    "@std/async": "jsr:@std/async@1.0.15",
    "@std/cache": "jsr:@std/cache@0.2.1",
    "@std/cli": "jsr:@std/cli@1.0.24",
    "@std/collections": "jsr:@std/collections@1.1.3",
    "@std/crypto": "jsr:@std/crypto@1.0.5",
    "@std/encoding": "jsr:@std/encoding@1.0.10",
    "@std/http": "jsr:@std/http@1.0.22",
    "@std/msgpack": "jsr:@std/msgpack@1.0.3",
    "@std/testing": "jsr:@std/testing@1.0.16",
    "@std/text": "jsr:@std/text@1.0.16",
    "@zod/zod": "jsr:@zod/zod@4.1.13",
    "feed": "npm:feed@5.1.0",
    "nosecone": "npm:nosecone@1.0.0-beta.15",
    "pino": "npm:pino@10.1.0",
    "preact": "npm:preact@10.28.0",
    "preact-render-to-string": "npm:preact-render-to-string@6.6.3",
    "simpledotcss": "npm:simpledotcss@2.3.7"
  }
}
